{
  "compilerOptions": {
    "baseUrl": "src/",
    "lib": ["ESNext", "DOM"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "outDir": "./dist/",
    // "target": "es5"

    "allowJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2015",
    "useDefineForClassFields": true
  },
  "include": ["src", "index.d.ts"]
}
