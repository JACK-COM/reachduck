{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es5", "dom", "es2015", "es2015.collection"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./lib/",
    "sourceMap": false,
    "strict": true,
    "target": "es5",
    "useDefineForClassFields": true
  },
  "include": ["./src/index.ts", "./src/types.ts"],
  "exclude": ["node_modules", "/lib", "./src/**/*.test.*"]
}
