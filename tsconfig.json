{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es5", "dom", "es2015", "es2015.collection"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./lib/",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "es6",
    "useDefineForClassFields": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "./src/**/*.test.*"]
}
